import javax.swing.Box.Filler;


public class Song {
	
	int t;
	int[] range;
	Note[] notes;
	MainApp p;
	
	
	public Song(MainApp _p, Note[] _notes, int[] _range, int _t) {
		p = _p;
		notes = _notes;
		range = _range;
		t = _t;
	}

	
	public void draw() {
		for (int i = 0; i < range.length; i++) {
			int noteToCheck = range[i];
			float d = p.map(notes[range[i]].getAttack(), 0, 1, 50, 100);
			p.fill(0xff0000);
			p.ellipse(p.width/2, p.height/2, d, d);
		}
	}
	

}
