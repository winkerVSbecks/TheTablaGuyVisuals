import processing.core.*;

public class Splash
{
  PVector position,speed;
  PApplet p;
  
  public Splash(PApplet _p, float x,float y)
  {
    float angle = p.random(PConstants.PI, PConstants.TWO_PI);
    float distance = p.random(1,5);
    float xx = p.cos(angle)*distance;
    float yy = p.sin(angle)*distance;
    position = new PVector(x,y);
    speed = new PVector(xx,yy);
    p = _p;
    
  }
  
  public void draw()
  {
    strokeWeight(1);
    stroke(100,50);
    fill(100,100);
    ellipse(position.x,position.y,2,2);
  }
  
  void calculate()
  {
    gravity();
     
    speed.x*=0.98;
    speed.y*=0.98;
           
    position.add(speed);
  }
  
  void gravity()
  {
    speed.y+=.2;
  }
  
}