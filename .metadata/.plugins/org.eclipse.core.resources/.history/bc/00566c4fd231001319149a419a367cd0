import java.util.ArrayList;
import processing.core.PApplet;
import processing.core.PConstants;

public class Cluster {
	
	Note note;
	PApplet p;
	ArrayList<Pyramid> flyingPyramids = new ArrayList<Pyramid> ();
	int NUMSHAPES = 12; 
	
	public Cluster(PApplet _p, Note _note) {
		p = _p;
		note = _note;
		for (int i=0; i<NUMSHAPES; i++) {
		    float r = p.random(25, 200);
		    float f = p.random(2, 5);
		    flyingPyramids.add( new Pyramid(p, f*r, r, true) );
		}
	}
	
	public void draw() {
//		float d = PApplet.map(note.getAttack(), 0.0f, 1.0f, 50.0f, 150.0f);
//		p.noStroke();
//		p.fill(255, 0, 0);
//		p.ellipse(p.width/2, p.height/2, d, d);
		
		// perspective to see close shapes
		p.perspective(PConstants.PI/3.0f, (float) p.width/p.height, 1, 1000000);
		// update and display all the shapes
		for (Pyramid p : flyingPyramids) {
			p.update();
		    p.display();
		}
	}

}
