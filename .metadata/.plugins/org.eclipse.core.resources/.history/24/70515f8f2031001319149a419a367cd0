import processing.core.PApplet;
import themidibus.*;

public class Song implements SimpleMidiListener {
	
	int t;
	int[] range;
	Note[] notes;
	MainApp p;
	
	
	public Song(MainApp _p, Note[] _notes, int[] _range, int _t) {
		p = _p;
		notes = _notes;
		range = _range;
		t = _t;
	}


	@Override
	public void controllerChange(int channel, int number, int value) {
		// TODO Auto-generated method stub
		
	}


	@Override
	public void noteOff(int channel, int pitch, int velocity) {
		// TODO Auto-generated method stub
		notes[pitch].off();
	}


	@Override
	public void noteOn(int channel, int pitch, int velocity) {
		// TODO Auto-generated method stub
		notes[pitch].on();
	}
	
	public void draw() {
		for (int i = 0; i < range.length; i++) {
			int noteToCheck = range[i];
			if( notes[range[i]].isOn ) {
				MainApp.println("note on: "+ noteToCheck);
			}
		}
	}
	

}
